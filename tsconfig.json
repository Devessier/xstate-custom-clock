    "declarationMap": true,
    "sourceMap": true,
    "noEmit": true,
    "rootDir": "./src",
    "outDir": "./lib",
    "module": "System",
    "moduleResolution": "Node"
  },
  "include": ["src/**/*.ts"],
  "exclude": ["node_modules"]
}
